<%- include('partials/header') %>

<main class="content-container">
  <section class="expenses-section">
    <h2>Expenses</h2>

    <form action="/add-expense" method="POST" class="expenses-form">
      <div>
        <input name="category" placeholder="Category" required />
      </div>
      <div>
        <input name="amount" type="number" step="0.01" placeholder="Amount" min="0" required />
      </div>
      <button type="submit">Add Expense</button>
    </form>

    <ul class="expenses-list">
      <% if (expenses.length === 0) { %>
        <li>No expenses recorded yet.</li>
      <% } else { %>
        <% expenses.forEach(e => { %>
          <li><strong><%= e.category %></strong>: $<%= e.amount.toFixed(2) %></li>
        <% }) %>
      <% } %>
    </ul>
  </section>
</main>


<%- include('partials/footer') %>