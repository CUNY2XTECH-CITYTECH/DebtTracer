<!DOCTYPE html>
<html lang="<%= lang %>">
  <head>
    <link rel="stylesheet" href="styles/welcome.css" />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
      <title><%= t('title') %></title>
  </head>
  <body>
    <header class="navbar">
      <div class="logo-container">
        <img src="/images/DT_Noname.png" alt="Debt Tracer Logo" class="logo" />
        <h1 class="app-name">Debt Tracer</h1>
      </div>
      <div class="auth-buttons">
        <div class="lang">
          <select id="language-select">
            <option value="en" <%= lang === 'en' ? 'selected' : '' %>>English</option>
            <option value="es" <%= lang === 'es' ? 'selected' : '' %>>Español</option>
            <option value="fr" <%= lang === 'fr' ? 'selected' : '' %>>Français</option>
            <option value="zh" <%= lang === 'zh' ? 'selected' : '' %>>中文</option>
            <option value="ja" <%= lang === 'ja' ? 'selected' : '' %>>日本語</option>
          </select>
        </div>
        <div class="logReg">
          <a href="/auth/login" class="btn login"><%= t('index.login') %></a>
          <a href="/auth/register" class="btn signup"><%= t('index.register') %></a>
        </div>
        
      </div>
    </header>
    <main class="main-content">
      <section class="tagline-section">
        <div class="tagline-wrapper">
          <div class="icon-container">
            <img src="/images/money_icon.png" alt="Money Icon" class="money-icon">
          </div>
          <div class="tagline-text">
            <h1><em><%= t("index.welcome") %></em></h1>
            <p>
              <%= t("index.subtitle") %>
            </p>
          </div>
        </div>
      </section>
      <section class="why-section">
        <div class="why-wrapper">
          <div class="why-image">
            <img src="/images/MoneyGive.jpg" alt="Debt Tracer collage" class="money-img" />
          </div>
          <div class="why-text">
            <h2><%= t("index.why") %> <span class="highlight">Debt Tracer?</span></h2>
            <p class="why-description">
              <%= t("index.use") %>
              <br></br>
              <%= t("index.use1") %>
            </p>
          </div>
        </div>
      </section>
      <section class="testimonials-section">
        <h2 class="testimonials-title"><%= t("index.member") %></h2>
        <div class="testimonials-wrapper">
          <div class="testimonial-card">
            <p class="testimonial-text"><%= t("index.member1") %></p>
            <p class="testimonial-author">~ Jawad, 20</p>
            <img src="/images/DT_Noname.png" alt="Dollar Logo" class="testimonial-logo" />
          </div>
          <div class="testimonial-card">
            <p class="testimonial-text"><%= t("index.member2") %></p>
            <p class="testimonial-author">~ Arisa, 18</p>
            <img src="/images/DT_Noname.png" alt="Dollar Logo" class="testimonial-logo" />
          </div>
          <div class="testimonial-card">
            <p class="testimonial-text"><%= t("index.member3") %></p>
            <p class="testimonial-author">~ Nadia, 27</p>
            <img src="/images/DT_Noname.png" alt="Dollar Logo" class="testimonial-logo" />
          </div>
        </div>
      </section>
</main>

<footer>
	<div class="footer-content">
		<% const Today = new Date() %>
		<% const year = Today.getFullYear()  %>
		<p>&copy; <%= year %> Debt Tracer.<%= t("index.copyright") %></p>
		<ul class="social-links">
			<!-- we could create a fake page for them or just make the button functional to an empty page or sign up page-->
		<li><a href="https://www.facebook.com" target="_blank">Facebook</a></li>
		<li><a href="https://www.twitter.com" target="_blank">Twitter</a></li>
		<li><a href="https://www.instagram.com" target="_blank">Instagram</a></li>
		<li><a href="https://www.linkedin.com" target="_blank">LinkedIn</a></li>
		</ul>
  </div>
</footer>
<script>
  document.getElementById('language-select').addEventListener('change', function () {
    const params = new URLSearchParams(window.location.search);
    params.set('lang', this.value);
    window.location.search = params.toString();
  });
</script>
<script src="/index.js></script>
</body>
</html>